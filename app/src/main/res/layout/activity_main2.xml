<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">


    <ImageView
        android:id="@+id/textView2"
        android:layout_width="420dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:background="#00000000"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <ImageButton
        android:id="@+id/record"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:background="@drawable/btn_bg_ex"
        android:src="@drawable/record"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:onClick="onButtonRecordClicked"/>

    <ImageButton
        android:id="@+id/play"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_bg_ex"
        android:src="@drawable/play"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:onClick="onButtonPlayClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Copyright 2017. Memorade Project Team. Gachon Univ.\nAll rights reserved."
        android:textSize="12dp" />

    <Button
        android:id="@+id/countlist"
        android:clickable="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/countlist"
        android:layout_alignTop="@+id/play"
        android:layout_alignRight="@+id/play"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="30dp" />


</RelativeLayout>