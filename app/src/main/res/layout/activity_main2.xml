<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:id="@+id/version"
        android:text="VERSION 1.9"
        android:layout_marginBottom="13dp" />

    <ImageView
        android:id="@+id/textView2"
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:layout_marginBottom="33dp"
        android:background="#00000000"
        android:gravity="center"
        android:src="@drawable/logo2"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="#00000000"
        android:src="@drawable/microphone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView3" />


    <ImageButton
        android:id="@+id/record"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="25dp"
        android:background="#00000000"
        android:onClick="onButtonRecordClicked"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/record"
        android:layout_alignTop="@+id/play"
        android:layout_toStartOf="@+id/play" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="25dp"
        android:background="#00000000"
        android:onClick="onButtonPlayClicked"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_btn"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Copyright 2017. Memorade Project Team. Gachon Univ.\nAll rights reserved."
        android:textSize="12dp"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/countlist"
        android:clickable="false"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/countlist2"
        android:layout_marginRight="6dp"
        android:text="0"
        android:textSize="30dp"
        android:layout_alignTop="@+id/play"
        android:layout_toEndOf="@+id/record"
        android:layout_marginStart="70dp" />

</RelativeLayout>