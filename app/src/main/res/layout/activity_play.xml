<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <ImageButton
        android:id="@+id/listImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/list_btn"
        android:layout_alignTop="@+id/homeBtn"
        android:layout_toLeftOf="@+id/homeBtn"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/home"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        />

    <ImageButton
        android:id="@+id/deleteImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/del_btn"
        android:layout_alignTop="@+id/homeBtn"
        android:layout_toRightOf="@+id/homeBtn"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_bg_ex"
        android:layout_height="match_parent"
        android:layout_below="@+id/homeBtn"
        android:layout_above="@+id/buttonLinear"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/atLinear"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:layout_above="@+id/rtLinear"
        android:gravity="center"
        android:text="내용 없음"
        android:shadowColor="#FF464646"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2.0"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/buttonLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp">

        <ImageButton
            android:id="@+id/backwards_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/button"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/button"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/backwards_btn" />

        <ImageButton
            android:id="@+id/button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/stop_btn3" />

        <ImageButton
            android:id="@+id/forward_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/button"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/button"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/forward_btn" />
    </LinearLayout>

